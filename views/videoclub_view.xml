<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_stickers_customized_list" model="ir.actions.act_window">
        <field name="name">Customized Stickers</field>
        <field name="res_model">stickers.customized</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_stickers_material_list" model="ir.actions.act_window">
        <field name="name">Materials</field>
        <field name="res_model">stickers.material</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

    <record id="action_stickers_scale_list" model="ir.actions.act_window">
        <field name="name">Scales</field>
        <field name="res_model">stickers.scale</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_stickers_shape_list" model="ir.actions.act_window">
        <field name="name">Shapes</field>
        <field name="res_model">stickers.shape</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_stickers_printing_list" model="ir.actions.act_window">
        <field name="name">Printing Types</field>
        <field name="res_model">stickers.printing</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sticker_customized_root" name="Sticker App" sequence="1"/>

    <menuitem
        id="menu_sticker_scale"
        name="Scales"
        parent="menu_sticker_customized_root"
        sequence="1"
        action="action_stickers_scale_list"
    />

    <menuitem
        id="menu_sticker_shape"
        name="Shapes"
        parent="menu_sticker_customized_root"
        sequence="2"
        action="action_stickers_shape_list"
    />

    <menuitem
        id="menu_sticker_printing"
        name="Printing Types"
        parent="menu_sticker_customized_root"
        sequence="3"
        action="action_stickers_printing_list"
    />

    <menuitem
        id="menu_sticker_material"
        name="Materials"
        parent="menu_sticker_customized_root"
        sequence="4"
        action="action_stickers_material_list"
    />

    <menuitem
        name="Customized Stickers"
        id="menu_stickers_customized"
        parent="menu_sticker_customized_root"
        sequence="5"
        action="action_stickers_customized_list"
    />

    <record id="view_material_form" model="ir.ui.view">
        <field name="name">stickers.material.form</field>
        <field name="model">stickers.material</field>
        <field name="arch" type="xml">
            <form string="Material">
                <sheet>
                    <notebook>
                        <page string="Información General">
                            <group>
                                <field name="product_template_id" string="Material"/>
                                <field name="stock" readonly="1" widget="float" string="Cantidad disponible (m²)"/>
                                <field name="image_1920" widget="image" string="Imagen del material"/>
                            </group>
                        </page>
                        <page string="Proveedor">
                            <group>
                                <field name="main_supplier_id"/>
                                <field name="cost_unit"/>
                                <field name="last_purchase_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stickers_customized_form" model="ir.ui.view">
        <field name="name">stickers.customized.form</field>
        <field name="model">stickers.customized</field>
        <field name="arch" type="xml">
            <form string="Customized Sticker">
                <sheet>
                    <notebook>
                        <page string="Detalles del Sticker">
                            <group>
                                <field name="id_finish"/>
                                <field name="id_scale"/>
                                <field name="id_shape"/>
                                <field name="id_product"/>
                                <field name="id_material" widget="many2many_tags"/>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="image_personalized" widget="image"/>
                                <field name="id_color" widget="many2many_tags" options="{'color_field': 'color', 'create': False}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stickers_scale_form" model="ir.ui.view">
        <field name="name">stickers.scale.form</field>
        <field name="model">stickers.scale</field>
        <field name="arch" type="xml">
            <form string="Scale">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stickers_shape_form" model="ir.ui.view">
        <field name="name">stickers.shape.form</field>
        <field name="model">stickers.shape</field>
        <field name="arch" type="xml">
            <form string="Shape">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stickers_printing_form" model="ir.ui.view">
        <field name="name">stickers.printing.form</field>
        <field name="model">stickers.printing</field>
        <field name="arch" type="xml">
            <form string="Printing Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_stickers_material_graph" model="ir.ui.view">
        <field name="name">stickers.material.graph</field>
        <field name="model">stickers.material</field>
        <field name="arch" type="xml">
            <graph string="Material Stock">
                <field name="product_template_id"/>
                <field name="stock" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>